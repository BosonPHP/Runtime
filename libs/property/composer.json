{
    "name": "local/property",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "Local\\Property\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Local\\Property\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": true,
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "scripts": {
        "test": ["@test:unit", "@test:functional"],
        "test:unit": "phpunit --testdox --testsuite=unit",
        "test:functional": "phpunit --testsuite=functional"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
